<div class="PageHeader">
	<div class="wrapper">
		<div class="">
			<div class="PageHeader-categoryName">
  			<%
  				if @collection.present?
  					header = @collection.collection_name
  				
  				elsif @collection_tags.present?
  					header = "Viewing gifts for "
  					@collection_tags.each do |collection_tag|
  						header += collection_tag + ','
  					end
					end

  			%>
  			<%= header %>
			</div>

			<div class="PageHeader-actionsContainer">
				<div class="PageHeader-navigationContainer">
					<a class="PillButton--text u-backArrow" href="/shop/categories">All Categories</a>
				</div>
			</div>
		</div>
	</div>

<%= render '/products/product_nav', locals: {products: @products} %>

<%= render '/products/product_tile', locals: {products: @products} %>
