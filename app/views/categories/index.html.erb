<div class="wrapper" style="margin-top:65px;">

  <div class="cards-container ready">
    <div class="CollectionGrid-container">
      <div class="CollectionGrid">

        <% @categories.each do |category| %>

        <%= link_to category_path(category), :class =>"CollectionGrid-tile hover-overlay-light" do%>

          <div class="CollectionGrid-tileImage align-center" style="background-image: url(<%= cloudinary_url(category.image) %>)"></div>
          <div class="CollectionGrid-tileName js-dotdotdot" style="word-wrap: break-word; white-space: normal;"><%= category.category_name %></div>
            <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="InfiniteScrollFooter">
    <div class="InfiniteScrollFooter-signature"></div>
  </div>
</div>
