<h2 class="text-center">Sign up</h2>
  <h5 class="text-center">Join to like and add products.</h5>

<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.5&appId=1667072860232019";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>



<div class="inline-box">
  
  <div class="row sign-up-disambiguation">
    <div class="col-sm-6 form-contained">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

    <div class="field">
        <%= f.text_field :first_name, autofocus: true, :placeholder => "First Name" %>
    </div>

    <div class="field">
        <%= f.text_field :last_name, autofocus: true, :placeholder => "Last Name" %>
    </div>


    <div class="field">
        <%= f.email_field :email, placeholder: "email", autofocus: true %>
      </div>

      <div class="field">
        <%= f.password_field :password, placeholder: "password", autocomplete: "off" %>
                <% if @minimum_password_length %>
        <span class="small">(<%= @minimum_password_length %> characters minimum)</span>
        <% end %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>
    </div>
    
    <div class="col-sm-6">
      <div class="sign-up-links field-container">
        <%= link_to user_omniauth_authorize_path(:facebook), :class=> "btn btn-block btn-social btn-lg btn-facebook"  do%>
          <span class="fa fa-facebook"></span> Sign in with Facebook
        <% end %>

        <%= link_to user_omniauth_authorize_path(:amazon), :class=> "btn btn-block btn-social btn-lg btn-amazon"  do%>
          <span class="fa fa-amazon"></span> Sign in with Amazon
        <% end %>

       <!-- <a class="btn btn-block btn-social btn-lg btn-instagram">
          <span class="fa fa-email"></span> Sign up with email
        </a> -->
      </div>
    </div>
  </div>
</div>
<div class="form-divider"></div>
  <div class="form-footnote">
    <a class="text-button sign-in fancybox fancybox.ajax ajax" tabindex="4" href="/users/sign-in"><span>I already have an account</span>
    </a>
  </div>
</div> 