<div class="row">
  <div class="col-lg-offset-1 col-lg-9">
<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="col-sm-4">
    <div class="field">
    <%= f.text_field :url, :placeholder => "URL" %>
    </div>
  </div>

  <div class="col-sm-2">
    <button class="button" type="button" onclick="get_amazon_details()">Get Details!</button>
  </div>
</div>

<div class="row">
  <div class="col-sm-6">

    <div class="field">
      <%= f.text_field :name, :placeholder => "name" %>
    </div>

    <div class="field">
      <%= f.text_field :vendor, :placeholder => "vendor" %>
    </div>

    <div class="field">
      <%= f.text_field :price, :placeholder => "price" %>
    </div>

    <div class="field">
      <%= f.text_field :image, :placeholder => "img url" %>
    </div>

    <div class="field">
      <%= f.hidden_field :prime, :placeholder => "prime" %>
    </div>


    <div class="field">
    <%= f.label :tags %><br>
    <%= f.collection_select(:tag_ids, @tags, :id, :tag_name, {}, {:class=>"chosen-select", 'multiple' => 'true'}) %>
    </div>
  </div>

  <div class="col-sm-6">
    <div class="carousel slide" id="carousel1">
        <div id="carousel-drop" class="carousel-inner"></div>
        <a data-slide="prev" href="#carousel1" class="left carousel-control">
            <span class="icon-prev"></span>
        </a>
        <a data-slide="next" href="#carousel1" class="right carousel-control">
            <span class="icon-next"></span>
        </a>
    </div>
  </div>
</div>

  <div id="image_field"></div>
  <%= f.hidden_field :discoverer, :value => current_user %>
  <div class="row"><div class="actions"><%= f.submit %></div></div>

<% end %>
</div>
</div>

<script type="text/javascript">
 $(".chosen-select").chosen({no_results_text: "Oops, nothing found!"}); 
</script>